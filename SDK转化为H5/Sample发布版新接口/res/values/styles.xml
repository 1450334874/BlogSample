<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme">   
		
		<!-- 设置窗口背景-->
        <item name="android:windowBackground">@color/all_bg</item>
		
    </style>
	
	
    <style name="hyperlink_text_style">
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/hyperlink_text</item>
        <item name="android:padding">5dp</item>
    </style>
	
	<style name="checkbox_style">
        <item name="android:button">@null</item>
        <item name="android:focusable">false</item>
		<item name="android:focusableInTouchMode">false</item>
    </style>
	
    
    <style name="common_btn_ok_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_big_button_height</item>
		<item name="android:background">@drawable/btn_ok</item>
        <item name="android:textSize">@dimen/big_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
	
	<style name="common_btn_cancel_style">
        <item name="android:layout_marginTop">@dimen/common_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_big_button_height</item>
		<item name="android:background">@drawable/btn_cancel</item>
        <item name="android:textSize">@dimen/big_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
	<style name="bind_textview_tip_style">
	    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/bind_textview_tip_color</item>	               
        <item name="android:textSize">@dimen/small_font_size</item>
	</style>
	
	<style name="msg_panel_btn_ok_style">
        <item name="android:layout_width">@dimen/common_normal_button_width</item>
        <item name="android:layout_height">@dimen/common_normal_button_height</item>
		<item name="android:background">@drawable/btn_ok</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
	
	<style name="msg_panel_btn_cancel_style">
        <item name="android:layout_width">@dimen/common_normal_button_width</item>
        <item name="android:layout_height">@dimen/common_normal_button_height</item>
		<item name="android:background">@drawable/btn_cancel</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
	
	<style name="list_view_btn_handle_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/btn_ok</item>
        <item name="android:textColor">@color/btn_ok_text_color</item>
    </style>
	
	<style name="list_view_btn_ignore_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/btn_cancel</item>
        <item name="android:textColor">@color/btn_cancel_text_color</item>
    </style>
	
	<style name="prompt_dlg_btn_ok_style">
        <item name="android:layout_width">@dimen/common_small_button_width</item>
        <item name="android:layout_height">@dimen/common_small_button_height</item>
		<item name="android:background">@drawable/btn_ok</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
	
	<style name="prompt_dlg_btn_cancel_style">
        <item name="android:layout_width">@dimen/common_small_button_width</item>
        <item name="android:layout_height">@dimen/common_small_button_height</item>
		<item name="android:background">@drawable/btn_cancel</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
	
   	<style name="common_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_edit_text_height</item>
	    <item name="android:layout_gravity">center</item>
	    <item name="android:textColorHint">@color/textColor_hint</item>
	    <item name="android:background">@drawable/editbox</item>
	    <item name="android:textSize">@dimen/edit_text_font_size</item>
	    <item name="android:singleLine">true</item>
    </style>
	

	<style name="LoadingDialog" parent="@android:style/Theme.Dialog">
	    
	    <item name="android:windowNoTitle">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/dlg_frame</item>
        
    </style>
    
	
	<style name="PromptDialog" parent="@android:style/Theme.Dialog">
	    
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowFrame">@null</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <!-- 
	    
		<item name="android:windowBackground">@drawable/dlg_frame</item>
        -->

    </style>
    
	
	<style name="ProgressDialog" parent="@android:style/Theme.Dialog">
	    
	    <item name="android:windowNoTitle">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
        
    </style>
	
	
    <style name="DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">12sp</item>
    </style>
 
    <style name="DialogText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    

    <style name="faqImageBtnStyle">
		<item name="android:layout_centerVertical">true</item>      
        <item name="android:padding">3dp</item>
        
    </style>
    
    <style name="apiTestBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        
    </style>
    
</resources>